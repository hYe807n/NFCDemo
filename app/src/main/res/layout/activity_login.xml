<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">
    <ImageView
            android:layout_width="320dp"
            android:layout_height="165dp"
            android:id="@+id/login_image"
            app:srcCompat="@drawable/app_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.339"
            app:layout_constraintHorizontal_bias="0.494"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logo"
            android:id="@+id/login_text"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintBottom_toTopOf="@+id/login_image"/>
    <TextView
            android:text="ID (학번/교번)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/id_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/login_image" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/username" android:layout_marginStart="8dp"
            android:layout_marginBottom="6dp"/>
    <EditText
            android:id="@+id/username"
            android:layout_width="375dp"
            android:layout_height="50dp"
            android:autofillHints="ID"
            android:hint="아이디"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.19" android:minHeight="48dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/login_image"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pd_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/username"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/password" app:layout_constraintVertical_bias="1.0"
            android:layout_marginStart="8dp" android:layout_marginBottom="6dp"/>
    <EditText
            android:id="@+id/password"
            android:layout_width="375dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:autofillHints="Password"
            android:hint="비밀번호"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:minHeight="48dp" tools:ignore="HardcodedText" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/login"
            android:enabled="false"
            android:layout_width="158dp"
            android:layout_height="65dp"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            android:text="로그인"
            android:textSize="40px"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_surface"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintVertical_bias="0.633"
            app:layout_constraintHorizontal_bias="0.498" app:backgroundTint="@color/material_dynamic_neutral20"/>


</androidx.constraintlayout.widget.ConstraintLayout>